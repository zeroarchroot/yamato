{
  "manifest_version": 3,
  "name": "Yamato",
  "version": "1.0",
  "description": "Prevents you from being unmotivated",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Yamato"
  },
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["run.js"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "execute-run": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "Slice the current tab"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "public/vergil.mp3",
        "public/vergil.webm",
        "vergil.jpeg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "48": "vergil.jpeg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "root@zeroarch.org"
    }
  }
}